<?xml version="1.0" ?>

<!-- 
	Full "abstract page" (or splash page or summary page, depending on your jargon) for an eprint. 
-->

<cite:citation xmlns="http://www.w3.org/1999/xhtml" xmlns:epc="http://eprints.org/ep3/control" xmlns:cite="http://eprints.org/ep3/citation" >
  <div id="premiere_preview_documents">
    <epc:set name="docs" expr="$item.documents()">

      <epc:if test="length($docs) = 0">
        <epc:phrase ref="page:nofulltext" />
      </epc:if>
  
      <epc:if test="length($docs) gt 0">
	<span class="premiere_preview_document_count">
          <epc:choose>
            <epc:when test="length($docs) gt 1">
              <epc:phrase ref="premiere_preview_document_count"><epc:pin name="count"><epc:print expr="$docs.length()"/></epc:pin></epc:phrase>
            </epc:when>
            <epc:otherwise>
              <epc:phrase ref="premiere_preview_document_count_one"/>
            </epc:otherwise>
          </epc:choose>
        </span>
	<ol class="premiere_preview_document_list">
        <epc:foreach expr="$docs" iterator="doc">
          <epc:print expr="$doc.citation('premiere_preview_selector')" />
        </epc:foreach>
	</ol>
      </epc:if>

    </epc:set>
  </div>
</cite:citation>

